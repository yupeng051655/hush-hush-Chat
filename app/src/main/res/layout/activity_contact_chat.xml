<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactChatActivity">


    <include
        android:id="@+id/contact_chat_bar_layout"
        layout="@layout/app_bar_layout"
        >
    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_msg_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/contact_chat_bar_layout"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/contact_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/input_contact_message"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:hint="send your message"
            android:padding="17dp"
            />

        <ImageButton
            android:id="@+id/contact_send_message_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/send_msg"
            android:background="@android:color/white"/>

    </LinearLayout>





</RelativeLayout>