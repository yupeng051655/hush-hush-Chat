<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactChatActivity">


    <include
        android:id="@+id/contact_chat_bar_layout"
        layout="@layout/app_bar_layout"
        >
    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contact_msg_recyclerView"
        android:layout_below="@+id/contact_chat_bar_layout"
        android:layout_above="@+id/contact_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </androidx.recyclerview.widget.RecyclerView>




    <LinearLayout
        android:id="@+id/contact_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >

        <EditText
            android:id="@+id/input_contact_message"
            android:hint="Enter message"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="6"
            />

        <ImageButton
            android:id="@+id/contact_send_message_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/send_msg"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:clickable="true"/>

    </LinearLayout>





</RelativeLayout>