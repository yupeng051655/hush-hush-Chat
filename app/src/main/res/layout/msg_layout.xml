<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cat"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/cat"
        android:layout_alignParentEnd="true"/>



    <TextView
        android:id="@+id/receiver_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/receiver_profile_image"
        android:background="@drawable/receiver_msg_layout"
        android:text="receiver msg"
        android:padding="8dp"
        android:textSize="15dp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/sender_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingTop="8dp"
        android:layout_toLeftOf="@+id/sender_profile_image"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_msg_text"
        android:background="@drawable/sender_msg_layout"
        android:text="send msg here"
        android:padding="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />


</RelativeLayout>